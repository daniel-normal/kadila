@model kadila.Models.Customer

@{
    ViewData["Title"] = "DETALLES DE CLIENTE";
}

<div class="height-100">
    <div class="col-12">
        <div class="card p-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary text-light">
                <span><i class="fas fa-user mr-3"></i> &nbsp;&nbsp; DETALLES DE CLIENTE</span>
            </div>
            <div class="table-responsive">
                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.Nombre)</h4>
                            <p class="h5 card-text text-primary">NOMBRE</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Apellido))
                    {
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">@Html.DisplayFor(model => model.Apellido)</h4>
                                <p class="h5 card-text text-primary">APELLIDO</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.Direccion)</h4>
                            <p class="h5 card-text text-primary">DIRECCIÓN</p>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.Telefono)</h4>
                            <p class="h5 card-text text-primary">CONTACTO</p>
                        </div>
                    </div>
                </div>
                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Bs. @Html.DisplayFor(model => model.SaldoDeuda)</h4>
                            <p class="h5 card-text text-primary">SALDO/DEUDA</p>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.TipoCliente)</h4>
                            <p class="h5 card-text text-primary">TIPO DE CLIENTE</p>
                        </div>
                    </div>
                </div>
                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.CreatedAt)</h4>
                            <p class="h5 card-text text-primary">FECHA DE REGISTRO</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <a asp-action="Index" class="btn btn-secondary w-100 mb-2">
                    CERRAR
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary w-100">
                    EDITAR
                </a>
            </div>
        </div>
    </div>
</div>