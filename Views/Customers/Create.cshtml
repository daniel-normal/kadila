@model kadila.Models.Customer

@{
    ViewData["Title"] = "REGISTRAR CLIENTE";
}

<form asp-action="Create" class="row g-3 needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card p-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-light">
            <span><i class="fas fa-user mr-3"></i> &nbsp;&nbsp; REGISTRAR NUEVO CLIENTE</span>
        </div>
        <div class="card-body">
            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                        <label asp-for="TipoCliente" class="h6 card-text text-primary"></label>
                        <select asp-for="TipoCliente" class="form-control" required onchange="handleTipoClienteChange(this)">
                            <option value="PERSONA">PERSONA</option>
                            <option value="EMPRESA">EMPRESA</option>
                        </select>
                        <span asp-validation-for="TipoCliente" class="text-danger"></span>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <label asp-for="Nombre" class="h6 card-text text-primary"></label>
                        <input asp-for="Nombre" class="form-control" required>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                        <label asp-for="Apellido" class="h6 card-text text-primary"></label>
                        <input asp-for="Apellido" class="form-control apellido-input"> <!-- Añadido la clase "apellido-input" -->
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <label asp-for="Direccion" class="h6 card-text text-primary"></label>
                        <input asp-for="Direccion" class="form-control">
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                        <label asp-for="Telefono" class="h6 card-text text-primary"></label>
                        <input type="number" asp-for="Telefono" class="form-control" required>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <label asp-for="SaldoDeuda" class="h6 card-text text-primary"></label>
                        <input type="number" asp-for="SaldoDeuda" class="form-control" required>
                        <span asp-validation-for="SaldoDeuda" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <a asp-action="Index" class="btn btn-secondary w-100 mb-4">
                CERRAR
            </a>
            <input type="submit" value="REGISTRAR" class="btn btn-success w-100" />
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function handleTipoClienteChange(selectElement) {
            var apellidoInput = document.querySelector('.apellido-input');
            if (selectElement.value === 'EMPRESA') {
                apellidoInput.setAttribute('disabled', 'disabled');
            } else {
                apellidoInput.removeAttribute('disabled');
            }
        }
    </script>
}