@model kadila.Models.PaymentHistory

@{
    ViewData["Title"] = "VER PAGO";
}

<div class="height-100">
    <div class="col-12">
        <div class="card p-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary text-light">
                <span><i class="fas fa-user mr-3"></i> &nbsp;&nbsp; DETALLES DE PAGO </span>
            </div>
            <div class="table-responsive">
                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.FechaPago)</h4>
                            <p class="h5 card-text text-primary"> @Html.DisplayNameFor(model => model.FechaPago) </p>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Bs. @Html.DisplayFor(model => model.Monto)</h4>
                            <p class="h5 card-text text-primary">@Html.DisplayNameFor(model => model.Monto) </p>
                        </div>
                    </div>
                </div>

                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">
                                MONTO: Bs. @Html.DisplayFor(model => model.Deuda.Monto)
                                <br />
                                CLIENTE: @Html.DisplayFor(model => model.Deuda.Cliente.Nombre)
                                @Html.DisplayFor(model => model.Deuda.Cliente.Apellido)
                                <br />
                                FECHA DE CREACIÓN: @Html.DisplayFor(model => model.Deuda.FechaCreacion)
                                <br />
                                FECHA LIMITE: @Html.DisplayFor(model => model.Deuda.FechaLimite)
                            </h4>
                            <p class="h5 card-text text-primary"> @Html.DisplayNameFor(model => model.Deuda) </p>
                        </div>
                    </div>
                </div>   
            </div>
            <div class="card-body">
                <a asp-action="Index" class="btn btn-secondary w-100 mb-2">
                    CERRAR
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary w-100">
                    EDITAR
                </a>
            </div>
        </div>
    </div>
</div>