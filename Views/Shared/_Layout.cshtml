@using Microsoft.AspNetCore.Identity;

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - kadila</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/kadila.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" asp-append-version="true" />
</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='fas fa-bars' id="header-toggle"></i> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a class="nav_logo"> <i class='fas fa-layer-group nav_logo-icon'></i> <span class="nav_logo-name">Kadila</span> </a>
                <div class="nav_list">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav_link text-light"> <i class='fas fa-th nav_icon'></i> <span class="nav_name">Inicio</span> </a>

                    @if(User.IsInRole("1"))
                    {
                        <a asp-area="" asp-controller="Users" asp-action="Index" class="nav_link text-light"> <i class='fas fa-user nav_icon'></i> <span class="nav_name">Usuarios</span> </a>
                    }

                    <a asp-area="" asp-controller="Customers" asp-action="Index" class="nav_link text-light"> <i class='fas fa-users nav_icon'></i> <span class="nav_name">Clientes</span> </a>

                    <a href="#" class="nav_link text-light"> <i class='fas fa-bookmark nav_icon'></i> <span class="nav_name">Bookmark</span> </a>
                    <a href="#" class="nav_link text-light"> <i class='fas fa-folder nav_icon'></i> <span class="nav_name">Files</span> </a>
                    <a href="#" class="nav_link text-light"> <i class='fas fa-chart-bar nav_icon'></i> <span class="nav_name">Stats</span> </a>
                </div>
            </div>
            <a asp-area="" asp-controller="Login" asp-action="Logout" class="nav_link text-light"> <i class='fas fa-sign-out-alt nav_icon'></i> <span class="nav_name">Cerrar Sesión</span> </a>
        </nav>
    </div>

    <div class="height-100 bg-light">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>