@model kadila.Models.User

@{
    ViewData["Title"] = "VER EMPLEADO";
}

<div class="height-100">
    <div class="col-12">
        <div class="card p-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary text-light">
                <span><i class="fas fa-user mr-3"></i> &nbsp;&nbsp; DETALLES DE EMPLEADO</span>
            </div>
            <div class="table-responsive">
                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.Name)</h4>
                            <p class="h5 card-text text-primary"> NOMBRE </p>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayTextFor(model => model.Email)</h4>
                            <p class="h5 card-text text-primary"> CORREO ELECTRÓNICO </p>
                        </div>
                    </div>           
                </div>

                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"> @Html.DisplayFor(model => model.CreatedAt) </h4>
                            <p class="h5 card-text text-primary"> FECHA DE REGISTRO </p>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"> @Html.DisplayFor(model => model.Rol.Name) </h4>
                            <p class="h5 card-text text-primary"> ROL </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <a asp-action="Index" class="btn btn-secondary w-100 mb-2">
                    CERRAR
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary w-100">
                    EDITAR
                </a>
            </div>
        </div>
    </div>
</div>