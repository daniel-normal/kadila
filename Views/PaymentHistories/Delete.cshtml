@model kadila.Models.PaymentHistory

@{
    ViewData["Title"] = "ELIMINAR PAGO";
}

<form asp-action="Delete" class="row g-3 needs-validation" novalidate>
    <div class="card p-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-light">
            <span><i class="fas fa-user mr-3"></i> &nbsp;&nbsp; ELIMINAR PAGO</span>
        </div>
        <div class="card-body">
            <h3>CONFIRMACIÓN DE ELIMINACIÓN</h3>
            <h4>¿Estás seguro de eliminar el pago?</h4>
            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                        <p class="h5 card-text">@Html.DisplayFor(model => model.FechaPago)</p>
                        <p class="h4 card-text">@Html.DisplayNameFor(model => model.FechaPago)</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <p class="h5 card-text">Bs. @Html.DisplayFor(model => model.Monto)</p>
                        <p class="h4 card-text">@Html.DisplayNameFor(model => model.Monto)</p>
                    </div>
                </div>      
            </div>
            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                        <p class="h5 card-text">
                            MONTO: Bs. @Html.DisplayFor(model => model.Deuda.Monto)
                            <br />
                            CLIENTE: @Html.DisplayFor(model => model.Deuda.Cliente.Nombre) @Html.DisplayFor(model => model.Deuda.Cliente.Apellido)
                            <br />
                            FECHA DE CREACIÓN: @Html.DisplayFor(model => model.Deuda.FechaCreacion)
                            <br />
                            FECHA LIMITE: @Html.DisplayFor(model => model.Deuda.FechaLimite)
                        </p>
                        <p class="h4 card-text">@Html.DisplayNameFor(model => model.Deuda)</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <a asp-action="Index" class="btn btn-secondary w-100">
                CERRAR
            </a>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="CONFIRMAR" class="btn btn-danger w-100 mt-2">
        </div>
    </div>
</form>