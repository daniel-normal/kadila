@{
    ViewData["Title"] = "INICIO";
}
    
<div class="height-100">
    <div class="col-12">
        <div class="card p-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary text-light">
                <span><i class="fas fa-user mr-3"></i> &nbsp;&nbsp; INICIO</span>             
            </div>

            <div class="alert alert-success alert-dismissible fade show w-100 mt-4" role="alert">
                @if (!string.IsNullOrEmpty(ViewData["WelcomeMessage"] as string))
                {
                    <p>@ViewData["WelcomeMessage"]</p>
                }
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
</div>