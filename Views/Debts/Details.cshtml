@model kadila.Models.Debt

@{
    ViewData["Title"] = "VER DEUDA";
}

<div class="height-100">
    <div class="col-12">
        <div class="card p-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-primary text-light">
                <span><i class="fas fa-user mr-3"></i> &nbsp;&nbsp; DETALLES DE LA DEUDA </span>
            </div>
            <div class="table-responsive">
                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.FechaCreacion)</h4>
                            <p class="h5 card-text text-primary"> @Html.DisplayNameFor(model => model.FechaCreacion) </p>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.FechaLimite)</h4>
                            <p class="h5 card-text text-primary"> @Html.DisplayNameFor(model => model.FechaLimite) </p>
                        </div>
                    </div>
                </div>

                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"> Bs. @Html.DisplayFor(model => model.Monto) </h4>
                            <p class="h5 card-text text-primary"> @Html.DisplayNameFor(model => model.Monto) </p>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"> @Html.DisplayFor(model => model.Estado) </h4>
                            <p class="h5 card-text text-primary"> @Html.DisplayNameFor(model => model.Estado) </p>
                        </div>
                    </div>
                </div>
                <div class="card-group">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"> @Html.DisplayFor(model => model.Cliente.Nombre) @Html.DisplayFor(model => model.Cliente.Apellido) </h4>
                            <p class="h5 card-text text-primary"> @Html.DisplayNameFor(model => model.ClienteId) </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <a asp-action="Index" class="btn btn-secondary w-100 mb-2">
                    CERRAR
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary w-100">
                    EDITAR
                </a>
            </div>
        </div>
    </div>
</div>