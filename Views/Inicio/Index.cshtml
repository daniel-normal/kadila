                        <h4>Farmacia Bolivia</h4>
                        <p>Buen servicio a clientes</p>
                    </div>
                </div>
            </div>
        </section>
        <section class="about-services">
            <div class="contenedor">
                <h2 class="titulo">Nuestros Productos</h2>
                <div class="servicio-cont">
                    <div class="servicio-ind">
                        <img src="~/img/agua.png" alt="">
                        <h3>Agua</h3>
                        <p>Generica</p>
                    </div>
                    <div class="servicio-ind">
                        <img src="~/img/amoxicilina.png" alt="">
                        <h3>Amoxicilina</h3>
                        <p>Generica</p>
                    </div>
                    <div class="servicio-ind">
                        <img src="~/img/sulfato.png" alt="">
                        <h3>Sulfato</h3>
                        <div style="text-align: center;">
                            <p>Generico</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
