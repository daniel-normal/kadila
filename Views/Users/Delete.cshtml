@model kadila.Models.User

@{
    ViewData["Title"] = "Eliminar Usuario - KADILA";
}

<form asp-action="Delete" class="row g-3 needs-validation" novalidate>
    <div class="card p-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-light">
            <span><i class="fas fa-user mr-3"></i> &nbsp;&nbsp; ELIMINAR USUARIO</span>
        </div>
        <div class="card-body">
            <h3>CONFIRMACIÓN DE ELIMINACIÓN</h3>
            <h4>¿Estás seguro de eliminar al usuario?</h4>
            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                        <p class="h5 card-text">@Html.DisplayFor(model => model.Name)</p>             
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="CONFIRMAR" class="btn btn-danger w-100">
            <a asp-action="Index" class="btn btn-secondary w-100 mt-2">
                CERRAR
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}