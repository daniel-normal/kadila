@model kadila.Models.Customer

@{
    ViewData["Title"] = "EDITAR DATOS";
}

<form asp-action="Edit" class="row g-3 needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card p-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-light">
            <span><i class="fas fa-user mr-3"></i> &nbsp;&nbsp; EDITAR CLIENTE</span>
        </div>
        <div class="card-body">
            <h4>DATOS DEL CLIENTE</h4>
            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                        <p class="h6 card-text text-primary">NOMBRE</p>
                        <input type="text" class="form-control" asp-for="Nombre" required>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Apellido))
                {
                    <div class="card">
                        <div class="card-body">
                            <p class="h6 card-text text-primary">APELLIDO</p>
                            <input type="text" class="form-control" asp-for="Apellido">
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>
                }
            </div>
            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                        <p class="h6 card-text text-primary">DIRECCIÓN</p>
                        <input type="text" class="form-control" asp-for="Direccion">
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <p class="h6 card-text text-primary">TELÉFONO</p>
                        <input type="number" class="form-control" asp-for="Telefono" required>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                        <p class="h6 card-text text-primary">SALDO/DEUDA</p>
                        <input type="number" class="form-control" asp-for="SaldoDeuda" required>
                        <span asp-validation-for="SaldoDeuda" class="text-danger"></span>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <p class="h6 card-text text-primary">TIPO DE CLIENTE</p>
                        <input type="text" class="form-control" asp-for="TipoCliente" readonly>
                        <span asp-validation-for="TipoCliente" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="UpdatedAt" />
            <a asp-action="Index" class="btn btn-secondary w-100 mb-4">CERRAR</a>
            <input type="submit" value="ACTUALIZAR" class="btn btn-primary w-100">
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}