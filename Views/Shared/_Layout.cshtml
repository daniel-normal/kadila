@using Microsoft.AspNetCore.Identity;

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KADILA</title>
    <link rel="shortcut icon" href="~/img/kadila.jpg" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/all.css" asp-append-version="true" />
    <script src="~/js/restriction.js" asp-append-version="true"></script>
</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='fas fa-bars' id="header-toggle"></i> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a class="nav_logo">
                    <img src="~/img/logo.png" alt="Kadila Logo" class="nav_logo-icon" style="width: 30px; height: 30px;">
                    <span class="nav_logo-name">KADILA</span>
                </a>

                <div class="nav_list">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav_link text-light"> <i class='fas fa-home nav_icon'></i> <span class="nav_name">INICIO</span> </a>

                    @if(User.IsInRole("1"))
                    {
                        <a asp-area="" asp-controller="Users" asp-action="Index" class="nav_link text-light"> <i class='fas fa-user nav_icon'></i> <span class="nav_name">USUARIOS</span> </a>
                    }

                    <a asp-area="" asp-controller="Customers" asp-action="Index" class="nav_link text-light"> <i class='fas fa-users nav_icon'></i> <span class="nav_name">CLIENTES</span> </a>

                    <a asp-area="" asp-controller="Debts" asp-action="Index" class="nav_link text-light">
                        <i class='fas fa-money-bill nav_icon'></i>
                        <span class="nav_name">DEUDAS</span>
                    </a>

                    <a asp-area="" asp-controller="PaymentHistories" asp-action="Index" class="nav_link text-light">
                        <i class='fas fa-dollar-sign nav_icon'></i>
                        <span class="nav_name">PAGOS</span>
                    </a>

                    <a asp-area="" asp-controller="Products" asp-action="Index" class="nav_link text-light">
                        <i class='fas fa-pills nav_icon'></i>
                        <span class="nav_name">PRODUCTOS</span>
                    </a>

                    <a asp-area="" asp-controller="Lots" asp-action="Index" class="nav_link text-light">
                        <i class='fas fa-prescription-bottle-alt nav_icon'></i>
                        <span class="nav_name">LOTES</span>
                    </a>
                  
                    <a class="nav_link text-light"> 
                        <i class='fas fa-chart-bar nav_icon'></i> 
                        <span class="nav_name">REPORTES</span>
                    </a>          
                </div>
            </div>
            <a asp-area="" asp-controller="Login" asp-action="Logout" class="nav_link text-light"> <i class='fas fa-sign-out-alt nav_icon'></i> <span class="nav_name">SALIR</span> </a>
        </nav>
    </div>

    <div class="height-100 bg-light text-center align-content-center p-xxl-4">
    @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>