@model IEnumerable<kadila.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="card mt-4">
    <div class="card-header bg-dark text-center text-light">
        <h1>REGISTRO DE USUARIOS</h1>
    </div>
    <div class="card-body">
        <a class="btn btn-block btn-success w-100 my-4" asp-action="Create">NUEVO USUARIO</a>
        <table class="table text-center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rol)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rol.Id)
                        </td>
                        <td>
                            <a class="btn btn-outline-primary"  asp-action="Edit" asp-route-id="@item.Id">Modificar</a>
                            <a class="btn btn-outline-secondary"  asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
